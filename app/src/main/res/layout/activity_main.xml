<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE407"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonRestar"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#F00609"
        android:text="Restar"
        android:textAllCaps="true"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintEnd_toStartOf="@+id/botonDividir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtResultado" />

    <Button
        android:id="@+id/botonSumar"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:layout_marginStart="-5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#F00609"
        android:text="Sumar"
        android:textAllCaps="true"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintEnd_toStartOf="@+id/botonDividir"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="@+id/txtResultado" />

    <Button
        android:id="@+id/botonMultiplicar"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:layout_marginStart="-5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#F00609"
        android:text="Multiplicar"
        android:textAllCaps="true"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintEnd_toStartOf="@+id/botonDividir"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtResultado" />

    <EditText
        android:id="@+id/txtOperandoB"
        android:layout_width="226dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:text="Metros"
        app:layout_constraintStart_toStartOf="@+id/txtOperandoA"
        app:layout_constraintTop_toBottomOf="@+id/txtOperandoA" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora RÃ¡pida"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <EditText
        android:id="@+id/txtOperandoA"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:text="Cajas"
        app:layout_constraintStart_toStartOf="@+id/txtTitulo"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <Button
        android:id="@+id/botonDividir"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#F10609"
        android:text="Dividir"
        android:textAllCaps="true"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintStart_toStartOf="@+id/txtResultado" />

    <EditText
        android:id="@+id/txtResultado"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Resultado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOperandoA"
        app:layout_constraintVertical_bias="0.741" />

</androidx.constraintlayout.widget.ConstraintLayout>